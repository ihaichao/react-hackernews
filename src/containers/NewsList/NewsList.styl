.news-view
  padding-left 5px
  padding-right 15px
  position relative
  &.loading:before
    content "Loading..."
    position absolute
    top 30px
    left 50%
    transform translateX(-50%)
  .pagination
    padding 10px 10px 10px 40px
    margin-top 10px
    border-top 2px solid #f60
    a
      margin-right 10px
      &:hover
        text-decoration underline